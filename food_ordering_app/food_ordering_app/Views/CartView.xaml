<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pancake ="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:helpers ="clr-namespace:food_ordering_app.Helpers"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             xmlns:vm="clr-namespace:food_ordering_app.ViewModels"
             x:Class="food_ordering_app.Views.CartView"
             Title="Giỏ hàng"
             Visual="Material"
             BackgroundColor="LimeGreen">
    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:TotalCostConverter x:Key='totalCostConverter' />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:CartViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="LimeGreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <BoxView Grid.Row="0">
                
            </BoxView>
            <Label Text="Burger Queen" FontSize="40" TextColor="WhiteSmoke"
                   FontFamily="CabinSketch"
                   HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="LabelName" FontSize="Subtitle" TextColor="WhiteSmoke"
                   HorizontalOptions="Center" VerticalOptions="End"/>
            <pancake:PancakeView Grid.Row="1" BackgroundColor="WhiteSmoke"
                                 CornerRadius="60,60,0,0">
                <ListView x:Name="ListViewCartItems" Margin="20"
                          SeparatorVisibility="None" BackgroundColor="WhiteSmoke"
                          ItemsSource="{Binding CartItems}" Header=""
                          HasUnevenRows="True">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Hình ảnh" Grid.Column="0" FontSize="Small"
                                       TextColor="Green"/>
                                <Label Text="Sản phẩm" Grid.Column="1" FontSize="Small"
                                       TextColor="Green"/>
                                <Label Text="Đơn giá" Grid.Column="2" FontSize="Small"
                                       TextColor="Green"/>
                                <Label Text="Số lượng" Grid.Column="3" FontSize="Small"
                                       TextColor="Green"/>
                                <Label Text="Thành tiền" Grid.Column="4" FontSize="Small"
                                       TextColor="Green"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding Image}" Grid.Column="0" FontSize="Body"
                                       TextColor="Green"/>
                                        <Label Text="{Binding ProductName}" Grid.Column="1" FontSize="Body"
                                       TextColor="Green"/>
                                        <Label Text="{Binding Price}" Grid.Column="2" FontSize="Body"
                                       TextColor="Green"/>
                                        <Label Text="{Binding Quantity}" Grid.Column="3" FontSize="Body"
                                       TextColor="Green"/>
                                        <Label Text="{Binding Cost}" Grid.Column="4" FontSize="Body"
                                       TextColor="Green"/>
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </pancake:PancakeView>

            <Label Text="{Binding TotalCost, Converter={StaticResource totalCostConverter}}"
                   Grid.Row="2" HorizontalTextAlignment="End" FontSize="Title"
                   TextColor="WhiteSmoke"/>
            <Button Text="Đặt hàng" Grid.Row="3" TextColor="White" Margin='0,0,0,4'
                    Command="{Binding PlcaeOrderCommand}"
                    HorizontalOptions="Center" CornerRadius="20"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>